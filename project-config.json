{
  "projectName": "AI-Driven Digital Toolkit for Small Businesses",
  "version": "1.0.0",
  "description": "Comprehensive AI-powered platform for small businesses to manage their digital presence",

  "architecture": {
    "frontend": "React + Vite",
    "backend": "Node.js + Express",
    "database": "MongoDB",
    "vectorDB": "Chroma (LangChain integration)",
    "aiModels": ["Ollama (Llama3)", "Google Gemini"],
    "paymentProvider": "Stripe"
  },

  "subscriptionPlans": {
    "free": {
      "name": "Free",
      "price": 0,
      "dailyCredits": 10,
      "features": {
        "websiteTemplates": 1,
        "emailCampaigns": 5,
        "imageGenerations": 3,
        "chatbotQueries": 50,
        "vectorSearchLimit": 100,
        "customBranding": false,
        "prioritySupport": false,
        "apiAccess": false
      },
      "creditCosts": {
        "websiteGeneration": 5,
        "emailGeneration": 1,
        "imageGeneration": 2,
        "chatbotQuery": 0.1,
        "vectorSearch": 0.1
      }
    },
    "starter": {
      "name": "Starter",
      "price": {
        "monthly": 29,
        "yearly": 290
      },
      "dailyCredits": 100,
      "bonusCredits": 500,
      "features": {
        "websiteTemplates": 5,
        "emailCampaigns": 50,
        "imageGenerations": 100,
        "chatbotQueries": 1000,
        "vectorSearchLimit": 2000,
        "customBranding": true,
        "prioritySupport": false,
        "apiAccess": false
      },
      "creditCosts": {
        "websiteGeneration": 4,
        "emailGeneration": 0.8,
        "imageGeneration": 1.5,
        "chatbotQuery": 0.05,
        "vectorSearch": 0.05
      }
    },
    "professional": {
      "name": "Professional",
      "price": {
        "monthly": 99,
        "yearly": 990
      },
      "dailyCredits": 500,
      "bonusCredits": 2000,
      "features": {
        "websiteTemplates": -1,
        "emailCampaigns": -1,
        "imageGenerations": -1,
        "chatbotQueries": -1,
        "vectorSearchLimit": -1,
        "customBranding": true,
        "prioritySupport": true,
        "apiAccess": true,
        "advancedAnalytics": true,
        "customDomains": true
      },
      "creditCosts": {
        "websiteGeneration": 3,
        "emailGeneration": 0.5,
        "imageGeneration": 1,
        "chatbotQuery": 0.02,
        "vectorSearch": 0.02
      }
    }
  },

  "creditPackages": [
    {
      "name": "Small Pack",
      "credits": 100,
      "price": 9.99,
      "bonusCredits": 10
    },
    {
      "name": "Medium Pack",
      "credits": 500,
      "price": 39.99,
      "bonusCredits": 75
    },
    {
      "name": "Large Pack",
      "credits": 1000,
      "price": 69.99,
      "bonusCredits": 200
    }
  ],

  "aiServices": {
    "websiteGeneration": {
      "models": ["gemini-2.5-flash", "ollama-llama3"],
      "defaultModel": "gemini-2.5-flash",
      "contextRequired": true,
      "vectorSearchEnabled": true,
      "features": [
        "responsive_design",
        "seo_optimization",
        "content_generation"
      ]
    },
    "emailMarketing": {
      "models": ["gemini-2.5-flash", "ollama-llama3"],
      "defaultModel": "gemini-2.5-flash",
      "contextRequired": true,
      "vectorSearchEnabled": true,
      "features": ["personalization", "a_b_testing", "analytics"]
    },
    "imageGeneration": {
      "models": ["dalle-3", "stable-diffusion"],
      "defaultModel": "dalle-3",
      "contextRequired": false,
      "vectorSearchEnabled": false,
      "features": ["text_to_image", "image_enhancement", "brand_consistency"]
    },
    "chatbot": {
      "models": ["gemini-2.5-flash", "ollama-llama3"],
      "defaultModel": "ollama-llama3",
      "contextRequired": true,
      "vectorSearchEnabled": true,
      "features": ["context_memory", "sentiment_analysis", "escalation"]
    },
    "vectorSearch": {
      "provider": "chroma",
      "embeddingModel": "mxbai-embed-large",
      "contextRequired": true,
      "features": ["semantic_search", "context_retrieval", "relevance_scoring"]
    }
  },

  "langchainIntegration": {
    "vectorStore": "chroma",
    "embeddingModel": "mxbai-embed-large",
    "contextWindow": 4096,
    "memoryType": "conversational_buffer_window",
    "contextualDocuments": [
      "company_profile",
      "product_catalog",
      "customer_interactions",
      "marketing_campaigns",
      "website_content",
      "feedback_data"
    ],
    "retrievalConfig": {
      "searchType": "similarity",
      "k": 5,
      "scoreThreshold": 0.7
    }
  },

  "userFlow": {
    "onboarding": [
      "company_registration",
      "business_profile_setup",
      "preferences_collection",
      "initial_context_gathering",
      "vector_store_initialization",
      "plan_selection"
    ],
    "dailyUsage": [
      "credit_refresh",
      "context_update",
      "service_usage_tracking",
      "analytics_collection"
    ],
    "aiContextGathering": {
      "companyInfo": [
        "name",
        "industry",
        "target_audience",
        "business_description"
      ],
      "preferences": ["brand_style", "communication_tone", "color_scheme"],
      "businessGoals": [
        "marketing_objectives",
        "growth_targets",
        "key_messages"
      ],
      "customerData": ["common_queries", "feedback", "interaction_history"]
    }
  },

  "implementation": {
    "status": "in_progress",
    "completed": [
      "database_schemas",
      "authentication_system",
      "credit_management",
      "subscription_management",
      "vector_store_integration",
      "langchain_setup",
      "website_generation_api",
      "logging_system",
      "error_handling",
      "validation_middleware",
      "auth_middleware"
    ],
    "inProgress": [
      "email_generation_api",
      "image_generation_api",
      "chatbot_api",
      "feedback_system",
      "payment_integration"
    ],
    "pending": [
      "frontend_integration",
      "email_service_integration",
      "stripe_webhooks",
      "admin_dashboard",
      "analytics_dashboard",
      "deployment_configuration"
    ]
  },

  "api_endpoints": {
    "auth": {
      "base": "/api/auth",
      "endpoints": [
        "POST /register",
        "POST /login",
        "GET /profile",
        "PUT /profile",
        "PUT /change-password",
        "GET /credits",
        "POST /refresh"
      ]
    },
    "website": {
      "base": "/api/website",
      "endpoints": [
        "POST /generate",
        "GET /my-websites",
        "GET /:id",
        "PUT /:id",
        "DELETE /:id"
      ]
    },
    "marketing": {
      "base": "/api/marketing",
      "endpoints": [
        "POST /email/generate",
        "GET /campaigns",
        "POST /campaigns/:id/send"
      ]
    },
    "media": {
      "base": "/api/media",
      "endpoints": [
        "POST /images/generate",
        "GET /images",
        "DELETE /images/:id"
      ]
    },
    "chatbot": {
      "base": "/api/chatbot",
      "endpoints": [
        "POST /chat",
        "GET /config",
        "PUT /config",
        "GET /analytics"
      ]
    }
  },

  "integrations": {
    "payment": {
      "provider": "stripe",
      "webhooks": ["payment_succeeded", "subscription_updated", "invoice_paid"],
      "features": [
        "recurring_billing",
        "credit_purchases",
        "usage_based_billing"
      ]
    },
    "email": {
      "provider": "sendgrid",
      "features": ["campaign_sending", "analytics", "template_management"]
    },
    "analytics": {
      "provider": "custom",
      "features": ["usage_tracking", "performance_metrics", "cost_analysis"]
    }
  },

  "security": {
    "authentication": "JWT",
    "encryption": "bcrypt",
    "apiRateLimit": "tier_based",
    "dataPrivacy": "company_isolated"
  },

  "development": {
    "environment": "development",
    "mongoUri": "mongodb://localhost:27017/ai-business-toolkit",
    "vectorDbPath": "./vector_stores/",
    "logLevel": "debug"
  }
}
